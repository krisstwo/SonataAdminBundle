{% apply spaceless %}
    {% for item in admin.getActionButtons(action, (object is defined) ? object : null ) %}
        {% if item.template is defined %}
            {% if loop.length > 1 %}
                {% set vars = {
                    'multiple_actions'  : true,
                    'action_class':  'dropdown-item' ,
                    'action_section_type': 'a',
                } %}
            {% else %}
                {% set vars = {
                    'multiple_actions'  : false,
                    'action_class':  'nav-link btn',
                    'action_section_type':  'button',
                } %}
            {% endif %}
            {% include item.template with vars %}
        {% endif %}
    {% endfor %}
{% endapply %}
